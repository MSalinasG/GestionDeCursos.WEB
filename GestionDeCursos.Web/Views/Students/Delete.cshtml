@model GestionDeCursos.Data.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h4>Delete Student</h4>
    </div>
    <div class="card-body">
        <h3 class="alert alert-danger">Are you sure you want to delete this student?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.StudentName)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.StudentName)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Course)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Course.CourseName)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.CourseFee)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.CourseFee)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.CourseDuration)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.CourseDuration) (Months)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.CourseStartDate)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.CourseStartDate)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.BatchTime)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.BatchTime)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Instructor)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Instructor.InstructorName)
            </dt>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
        </form>
    </div>
</div>
