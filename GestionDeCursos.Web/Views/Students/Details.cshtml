@using GestionDeCursos.Web.Helpers
@using GestionDeCursos.Data.Helpers

@model GestionDeCursos.Data.Models.Student

@{
    ViewData["Title"] = "Details";
    var showButton = Html.HasRole(GlobalHelper.Role.Administrator) || Html.HasRole(GlobalHelper.Role.Instructor);
}

<div class="card">
    <div class="card-header">
        <h4>Student Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.StudentName)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.StudentName)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Course)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Course.CourseName)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.CourseFee)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.CourseFee)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.CourseDuration)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.CourseDuration) (Months)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.CourseStartDate)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.CourseStartDate)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.BatchTime)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.BatchTime)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Instructor)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Instructor.InstructorName)
            </dt>
        </dl>
    </div>
    <div class="card-footer">
        @if (showButton)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-trash-alt"></i> Delete</a>
        }
        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
    </div>
</div>
