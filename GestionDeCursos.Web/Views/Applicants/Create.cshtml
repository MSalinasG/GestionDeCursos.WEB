            <button type="submit" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-save"></i> Create</button>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
        </div>
    </div>
