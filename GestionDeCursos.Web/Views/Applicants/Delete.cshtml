@model GestionDeCursos.Data.Models.Applicants

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h4>Delete Applicant</h4>
    </div>
    <div class="card-body">
        <h3 class="alert alert-danger">Are you sure you want to delete this applicant?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Nombre)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Nombre)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Apellido)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Apellido)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Dni)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Dni)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Nacimiento)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Nacimiento)
            </dt>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
        </form>
    </div>
</div>
